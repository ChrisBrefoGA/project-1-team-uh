<apex:page controller="AccountDisplayController" lightningStylesheets="true" >    
<!-- Displays the users account information, if there is nothing to be displayed it
, then a different message will display-->
<apex:form style="display:{!IF(acc != null, 'block','none')}">
    <apex:commandButton value="Save" action="{!save}" id="saveButton" />
    <apex:pageBlock >
        <apex:pageBlockTable value="{!acc}" var="ac">
            <apex:column value="{!ac.Name}"/><br />
        </apex:pageBlockTable>
        <apex:pageBlockTable value="{!acc}" var="ac">
            <apex:column value="{!ac.Type}"/><br />
        </apex:pageBlockTable>
        <apex:pageBlockTable value="{!acc}" var="ac">
             <apex:column value="{!ac.AccountNumber}"/><br />
        </apex:pageBlockTable>
        <apex:pageBlockTable value="{!acc}" var="ac">
             <apex:column value="{!ac.Type}"/><br />        
        </apex:pageBlockTable>
        <apex:pageBlockTable value="{!acc}" var="ac">
            <apex:column value="{!ac.Industry}"/><br />
        </apex:pageBlockTable>
        <apex:pageBlockTable value="{!acc}" var="ac">
            <apex:column value="{!ac.Phone}"/><br />
        </apex:pageBlockTable>
        <apex:pageBlockTable value="{!acc}" var="ac">
            <apex:column value="{!ac.NumberOfEmployees}"/><br />
        </apex:pageBlockTable>
        <apex:pageBlockTable value="{!acc}" var="ac">
            <apex:column value="{!ac.Website}"/><br />
        </apex:pageBlockTable>
        <apex:inlineEditSupport event="ondblClick" showOnEdit="saveButton" />
    </apex:pageBlock>
</apex:form>
<h1 style="display:{!IF(acc != null, 'none','block')}">
    There are no accounts associated with your profile.
</h1>


</apex:page>